static int byt_es8316_aif1_hw_params(struct snd_pcm_substream *substream,
					struct snd_pcm_hw_params *params)

{
	struct snd_soc_pcm_runtime *rtd = substream->private_data;
	struct snd_soc_dai *codec_dai = rtd->codec_dai;

	int ret;

	ret = snd_soc_dai_set_sysclk(codec_dai, 19200000,
				     params_rate(params) * 512,
				     SND_SOC_CLOCK_IN);

	if (ret < 0) {
		dev_err(rtd->dev, "can't set codec clock %d\n", ret);
		return ret;
	}
	
	return 0;
}



static int byt_es8316_init(struct snd_soc_pcm_runtime *runtime)
{
	int ret;
	struct snd_soc_codec *codec = runtime->codec;
	struct snd_soc_card *card = runtime->card;
	const struct snd_soc_dapm_route *custom_map;
	struct byt_es8316_private *priv = snd_soc_card_get_drvdata(card);
	int num_routes;
	printk("!!!!!!!!!!!!!!!!!!!!!!!Enter Into %s \n", __func__);
	card->dapm.idle_bias_off = true;

	ret = snd_soc_add_card_controls(card, byt_es8316_controls,
					ARRAY_SIZE(byt_es8316_controls));
	if (ret) {
		dev_err(card->dev, "unable to add card controls\n");
		return ret;
	}

	custom_map = byt_es8316_intmic_in2_map;
	num_routes = ARRAY_SIZE(byt_es8316_intmic_in2_map);

	ret = snd_soc_dapm_add_routes(&card->dapm, custom_map, num_routes);
	if (ret)
		return ret;
	
	ret = snd_soc_dapm_add_routes(&card->dapm,
				byt_es8316_ssp2_aif1_map,
				ARRAY_SIZE(byt_es8316_ssp2_aif1_map));	
	if (ret)
		return ret;

	ret = snd_soc_dapm_add_routes(&card->dapm,
				byt_es8316_stereo_spk_map,
				ARRAY_SIZE(byt_es8316_stereo_spk_map));
	if (ret)
		return ret;

	snd_soc_dapm_ignore_suspend(&card->dapm, "Headphone");
	snd_soc_dapm_ignore_suspend(&card->dapm, "Speaker");

	ret = clk_set_rate(priv->mclk, 19200000);
	if (ret)
		dev_err(card->dev, "unable to set MCLK rate\n");

	return ret;
}

